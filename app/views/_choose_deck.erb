<head>
  <title></title>
  <div id="nav">
  <%if current_user%>
  <div class="links"
  <p>You are logged in as: <%=current_user.username%></p>
  <p><span class="new_game"><a href="/user/<%=current_user.id%>">Start a new game</a></span></p>
  <p><span class="user_page"><a href="/user_page">Go to your user page</a></span></p>
  <p><span class="logout"><a href="/logout">Logout</a></span></p>
  </div>
  <%end%>
  </div>
</head>
<div id="image_holder">
    <div class="container">
      <h1><%=current_user.username%>'s Flashcard game!</h1>
      <br>
      <h4>Choose your deck</h4>
      <ul>
        <select class="select_deck" >
          <option value="Choose from below">
          <% @decks.each do |deck| %>
          <option value=/open_deck/<%=deck.id%>><%= deck.name %></option>
          <% end %>
        </select>
      </ul>
    </div>
</div>